<% provide(:title, "Home") %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
  </head>
  <body>
    <% if !logged_in? %>
    <div class="center jumbotron">
	  <h1>Welcome to my sample app</h1>

	  <h2>Sign Up to enjoy the ultimate experience in the app</h2>

	  <%= link_to "Sign up now!", new_user_path, class: "btn btn-lg btn-primary" %>
	</div>
  <% else %>
    <div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

      <div class="item active">
        <img src="/assets/5.jpg" alt="Los Angeles" style="width:100%;">
        <div class="carousel-caption">
          <h3>Beach View</h3>
          <p>Enjoy the moment where you are..!</p>
        </div>
      </div>

      <div class="item">
        <img src="/assets/2.jpg" alt="Chicago" style="width:100%;">
        <div class="carousel-caption">
          <h3>Wild Things</h3>
          <p>The place where we came from..</p>
        </div>
      </div>
    
      <div class="item">
        <img src="/assets/3.jpg" alt="New York" style="width:100%;">
        <div class="carousel-caption">
          <h3>Peaceful World</h3>
          <p>Nature who ever likes..</p>
        </div>
      </div>

      <div class="item">
        <img src="/assets/1.jpg" alt="New York" style="width:100%;">
        <div class="carousel-caption">
          <h3>Heights of the world</h3>
          <p>We can learn more from here...!!</p>
        </div>
      </div>
  
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
  <% end %>
  </body>
</html>